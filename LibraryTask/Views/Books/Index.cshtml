
@model IEnumerable<Book>
@{
    ViewData["Title"] = "Books";
}


@*<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.1/css/bootstrap.min.css" rel="stylesheet" />*@
<link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<style>
    .table-responsive i.material-icons {
        color: #fff !important;
    }

    .page-item.active .page-link {
        background-color: #13BFF0 !important;
        border-color: #13BFF0 !important;
    }
</style>

<section id="basic-input">
    <div class="row">


        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Book List</h4>
                </div>
                <div class="card-content">
                    <div class="row"><a href="@Url.Action("AddNew","Books")">AddNew</a></div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered  Booklist">
                                <thead>
                                    <tr>
                                        <th>BookCover</th>
                                        <th>Name</th>
                                        <th>Cost</th>
                                        <th>PublishDate</th>
                                        <th>Author</th>
                                        <th>Category</th>
                                        <th>SubCategory</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td><img width="70" height="70" src="~/@item.BookCover"></td>
                                        <td>@item.Name</td>
                                        <td>@item.cost</td>
                                        <td>@item.PublishDate</td>
                                        <td>@item.AuthorData.Name</td>
                                        <td>@item.CategoryData.Name</td>
                                        <td>@item.SubCategoryData.Name</td>
                                    </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    @*<tr>
                                            <th>Name</th>
                                            <th>Position</th>
                                            <th>Office</th>
                                            <th>Age</th>
                                            <th>Start Date</th>
                                            <th>Salary</th>
                                        </tr>*@
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

@section Scripts{

     <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
     <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

    <script>

        $(document).ready(function () {
    // File export
           $(document).ready(function () {
             $('.Booklist').DataTable();
          });
    });
    </script>

}


