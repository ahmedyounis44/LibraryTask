@model  Root
@{
    ViewData["Title"] = "stackexchange";
    int c = 1;
}

@*<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.1/css/bootstrap.min.css" rel="stylesheet" />*@
<link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<style>
    .table-responsive i.material-icons {
        color: #fff !important;
    }

    .page-item.active .page-link {
        background-color: #13BFF0 !important;
        border-color: #13BFF0 !important;
    }
</style>

<section id="basic-input">
    <div class="row">


        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Question List</h4>
                </div>
                <div class="card-content">
                   
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered  Booklist">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Title</th>
                                         <th>Details</th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.items)
                                    {
                                    <tr>
                                        <td>@(c++)</td>
                                        <td>@item.title</td>
                                        <td><a href="@Url.Action("QuestionDetails","Books",new { Id=item.question_id})">Details</a></td>
                                      
                                    </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    @*<tr>
                                            <th>Name</th>
                                            <th>Position</th>
                                            <th>Office</th>
                                            <th>Age</th>
                                            <th>Start Date</th>
                                            <th>Salary</th>
                                        </tr>*@
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>

@section Scripts{

     <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
     <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>

    <script>

        $(document).ready(function () {
    // File export
           $(document).ready(function () {
             $('.Booklist').DataTable();
          });
    });
    </script>

}


